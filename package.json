{
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.0",
    "concurrently": "^3.5.0",
    "eslint": "^4.0.0",
    "eslint-config-prettier": "2.3.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-prettier": "^2.1.2",
    "jest": "^20.0.4",
    "lerna": "^2.0.0",
    "prettier": "^1.4.4"
  },
  "scripts": {
    "lint": "eslint packages",
    "flow": "flow",
    "flow:check": "flow check",
    "test": "lerna run test",
    "prepublish:all": "for I in packages/*/; do echo \"cd $I && npm run prepublish\" | perl -p -e 's/\\n/\\0/;'; done | xargs -0 node_modules/.bin/concurrently",
    "watch": "for I in packages/*/; do echo \"cd $I && npm run watch\" | perl -p -e 's/\\n/\\0/;'; done | xargs -0 node_modules/.bin/concurrently --kill-others"
  },
  "jest": {
    "testRegex": "__tests__/.*\\.test\\.js$"
  },
  "dependencies": {
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-flow": "^6.23.0",
    "flow-bin": "^0.52.0",
    "flow-copy-source": "^2.0.3",
    "graphql": "^0.10.5",
    "pg": ">=6 < 7",
    "sql-formatter": "^1.2.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
